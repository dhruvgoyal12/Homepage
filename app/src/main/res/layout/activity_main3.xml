<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Main3Activity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="2dp"
        android:layout_marginTop="69dp"
        android:text="Contact us Page"
        android:textAlignment="center"
        android:textFontWeight="1200"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="italic" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/text1"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="69dp"
        android:text="Contact us Online :"

        android:textFontWeight="1200"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="normal" />

    <ImageButton
        android:id="@+id/imbt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="258dp"
        android:src="@drawable/facebook_round_96"
        android:background="@null"
        />

    <ImageButton
        android:id="@+id/imbt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="258dp"

        android:background="@null"
        android:src="@drawable/instagram_96" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/imbt2"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="50dp"
        android:text="Call us : "

        android:textFontWeight="1200"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="normal" />

    <ImageButton
        android:id="@+id/imbt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"

        android:background="@null"
        android:src="@drawable/calling_96" />


</RelativeLayout>
</ScrollView>