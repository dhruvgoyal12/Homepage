<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5dc"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Registration Form"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textFontWeight="1000"
            android:fontFamily="sans-serif-black"
            android:gravity="center_horizontal"
            android:id="@+id/tv"

            />

        <EditText
            android:id="@+id/et1"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv"
            android:background="@drawable/edit_round"
            android:hint="College ID"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:elevation="10dp"
            android:textAlignment="center"
            android:textColorHint="#696969"
            android:textColor="#000000"
            android:maxLength="12"
            android:maxLines="1"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"

            android:gravity="center_horizontal"

            />

        <EditText
            android:id="@+id/editText"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/et1"
            android:paddingTop="5dp"
            android:layout_marginTop="25dp"
            android:textColor="#000000"


            android:layout_centerHorizontal="true"

            android:background="@drawable/edit_round"
            android:hint="Name"

            android:textAlignment="center"
            android:textColorHint="#696969"
            android:elevation="10dp"
            android:inputType="text"
            android:gravity="center_horizontal"/>

        <EditText
            android:id="@+id/editText4"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_round"
            android:layout_below="@id/editText"
            android:hint="Mobile Number"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"

            android:layout_marginTop="25dp"
            android:textColor="#000000"
            android:elevation="10dp"
            android:textAlignment="center"
            android:textColorHint="#696969"

            android:inputType="phone"
            android:gravity="center_horizontal"
            tools:layout_editor_absoluteY="198dp" />

        <EditText
            android:id="@+id/et3"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/editText4"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:layout_marginTop="25dp"

            android:elevation="10dp"
            android:background="@drawable/edit_round"
            android:hint="Email ID"
            android:selectAllOnFocus="false"
            android:textAlignment="center"
            android:textColorHint="#696969"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="285dp"
            android:textColor="#000000"

            android:inputType="textEmailAddress"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv5"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/et3"/>

        <TextView
            android:id="@+id/editText5"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/text_spinner"
            android:gravity="center_horizontal"
            android:text="Hosteler : "
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_toLeftOf="@id/tv5"
            android:paddingTop="5dp"

            android:layout_marginTop="25dp"
            android:layout_below="@id/et3"

            android:textAlignment="center"
            android:textColorHint="#000000"
            android:elevation="10dp"

             />


        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="25dp"
            android:elevation="10dp"
            android:gravity="center_horizontal"
            android:layout_toEndOf="@+id/tv5"
            android:layout_below="@id/et3"
            android:textColor="@android:color/black"

            android:background="@drawable/spinner"

            android:entries="@array/hostel_bool"
            android:prompt="@string/bool_hos"
            android:textAlignment="center"

           >

        </Spinner>
        <TextView
            android:id="@+id/tv6"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editText5"/>
        <TextView
            android:id="@+id/editText6"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/text_spinner"
            android:textSize="18sp"
            android:text="Branch : "
            android:layout_toLeftOf="@id/tv6"
            android:layout_below="@id/editText5"
            android:layout_marginTop="25dp"
            android:paddingTop="5dp"

            android:textAlignment="center"
            android:textColor="#000000"
            android:elevation="10dp"
            android:gravity="center_horizontal"
            tools:layout_editor_absoluteY="198dp"
            />


        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textColor="@android:color/black"

            android:textAlignment="center"
            android:background="@drawable/spinner"
            android:layout_marginTop="25dp"
            android:layout_below="@id/editText5"
            android:layout_toRightOf="@id/tv6"
            android:layout_marginStart="0dp"

            android:entries="@array/Branch"
            android:prompt="@string/Branch_choice"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="355dp"
            android:layout_toEndOf="@id/editText6"
            android:elevation="10dp"
            android:gravity="center_horizontal"


            >

        </Spinner>


        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="REGISTER"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_below="@id/editText6"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"


            android:background="@drawable/button1"
            android:elevation="10dp"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            />
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
