<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@drawable/background"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"

            android:fontFamily="serif"
            android:paddingTop="10dp"
            android:text="ZINE"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textFontWeight="1000"
            android:textSize="50sp"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="0dp"

            android:fontFamily="monospace"

            android:text="Where imagination leads to creation"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="italic"
            android:textSize="10sp"
             />



        <Button
        android:id="@+id/bt1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_button"
        android:drawableTop="@drawable/contacts"
        android:drawablePadding="14sp"
        android:elevation="30dp"
        android:padding="20dp"

        android:text="contact"
        android:textColor="#000000"
        android:textFontWeight="1000"

        android:textSize="20sp" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"


        android:layout_marginTop="150dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/custom_button"
        android:drawableTop="@drawable/team"

        android:drawablePadding="14sp"
        android:elevation="30dp"


        android:padding="20dp"

        android:text="Team"
        android:textColor="#000000"
        android:textFontWeight="1000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/bt2"

        android:layout_alignParentLeft="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_button"
        android:drawableTop="@drawable/website"
        android:drawablePadding="14sp"
        android:elevation="30dp"
        android:padding="20dp"

        android:text="Visit us"
        android:textColor="#000000"
        android:textFontWeight="1000"
        android:textSize="20sp" />
        <Button
            android:id="@+id/bt4"
            android:layout_width="150dp"
            android:layout_height="150dp"

            android:layout_below="@id/bt2"
            android:layout_alignParentRight="true"


            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/custom_button"
            android:drawableTop="@drawable/website"
            android:drawablePadding="14sp"
            android:elevation="30dp"
            android:padding="20dp"

            android:text="Extras"
            android:textColor="#000000"
            android:textFontWeight="1000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt3"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="40dp"

            android:fontFamily="monospace"

            android:text="Have the courage to follow your heart and intuition."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="italic"
            android:textSize="20sp"
            />
       <TextView
        android:id="@+id/tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv3"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="10dp"

        android:fontFamily="monospace"

        android:text="-Steve Jobs"
        android:textAlignment="center"
        android:textColor="#000000"

        android:textSize="20sp"
        />

    </RelativeLayout>
</ScrollView>


